{
  "pluginAlias": "LGThinQ",
  "pluginType": "platform",
  "singular": true,
  "schema": {
	"username": {
	  "title": "Username",
	  "type": "string",
	  "required": true
	},
	"password": {
	  "title": "Password",
	  "type": "string",
	  "required": true
	},
	"country": {
	  "title": "Country",
	  "type": "string",
	  "default": "US",
	  "required": true
	},
	"language": {
	  "title": "Language",
	  "type": "string",
	  "default": "en-US",
	  "required": true
	},
	"debug": {
	  "title": "Enable Debug Mode?",
	  "type": "boolean",
	  "default": false
	}
  },
  "layout": [
	{
	  "type": "flex",
	  "flex-flow": "row wrap",
	  "items": [
		"username",
		{
		  "key": "password",
		  "type": "password"
		}
	  ]
	},
	"country",
	"language"
